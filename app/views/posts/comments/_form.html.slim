= simple_form_for(PostComment.new, url: post_comments_path(@post)) do |f|
  = f.input :content, wrapper_html: { class: 'my-2' }, hint: t('.markdown_support')
  = f.hidden_field :parent_id, value: parent_id
  = f.button :submit, t('.submit'), class: 'btn-primary my-2'
  = button_tag(t('.cancel_link'), type: 'button', class: 'btn btn-secondary my-2 ms-2',
          data: { 'bs-toggle' => 'collapse', 'bs-target' => ".collapse-comment-#{parent_id || 0}" },
          aria: { expanded: 'false', controls: "collapse-comment-#{parent_id || 0}" })
